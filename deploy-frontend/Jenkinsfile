        //             """
        //     }
        // }
        stage ('Ansible Deploy') {
            steps {
                sh  """
                    git clone https://github.com/kimdragon50/facam-ansible.git 
                    cd  facam-ansible 
                    ansible-playbook deploy_backend.yml -i ./hosts/hosts --extra-vars "deploy_hosts=app" 
                    """
            }
        }
        stage ('Workspace Clean') {
            steps {
             cleanWs()   
            }
        }
    }
}



