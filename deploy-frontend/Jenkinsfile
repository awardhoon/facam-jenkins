
pipeline {
    agent any
    stages {
        stage ('Workspace Clean') {
            steps {
             cleanWs()   
            }
        }
        // stage ('Build - npm build') {
        //     steps {
        //         sh script: """\
        //                     echo ${WORKSPACE}
        //                     git clone https://github.com/kimdragon50/facam-frontend.git 
        //                     cd facam-frontend 
        //                     npm install 
        //                     npm build 
        //                     cp -r build/* /usr/share/nginx/html/
        //                     """, returnStdout: true
        //     }
        // }
        stage ('git clone') {
            steps {
                sh script: """\
                            echo ${WORKSPACE}
                            git clone https://github.com/kimdragon50/facam-backend.git 
                            """, returnStdout: true
            }
        }
        stage ('Maven build') {
            steps {
                sh script: """\
                            cd facam-backend
                            mvn clean
                            mvn package 
                            """, returnStdout: true
            }
        }
        stage ('copy jar') {
            steps {
                sh script: """\
                            cp ./target/employee-management-backend-0.0.1-SNAPSHOT.jar /usr/local/share
                            """, returnStdout: true
            }
        }
        stage ('Deploy') {
            steps {
                sh script: """\
                            git clone https://github.com/kimdragon50/facam-ansible.git 
                            cd  facam-ansible 
                            ansible-playbook deploy_backend.yml -i ./hosts/hosts --extra-vars "deploy_hosts=app" 
                            """, returnStdout: true
            }
        }
    }
}



