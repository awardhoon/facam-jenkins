        stage ('git clone') {
            steps {
                sh  """
                    echo ${WORKSPACE}
                    git clone https://github.com/kimdragon50/facam-backend.git 
                    """
            }
        }
        stage ('Maven Build') {
            steps {
                sh  """
                    cd facam-backend
                    mvn clean
                    mvn package 
                    """
            }
        }
        // stage ('copy jar') {
        //     steps {
        //         sh  """
        //             cd facam-backend
